{
  "name": "nopo",
  "version": "0.0.1",
  "private": true,
  "description": "mo(no) re(po) tools for mono repos",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm run \"/^build:.*/\"",
    "build:apps": "pnpm --filter \"./apps/*\" build",
    "build:packages": "pnpm --parallel --filter \"./packages/*\" build",
    "clean": "pnpm run \"/^clean:.*/\"",
    "clean:workspace": "pnpm run -r clean",
    "clean:root": "rm -rf .cache .config .bash_history .env .local .pnpm-store node_modules && rm -f build-metadata.json || true",
    "check": "pnpm run \"/^check:.*/\"",
    "check:workspace": "pnpm run -r \"/^check:.*/\"",
    "check:lint:root": "eslint",
    "check:types:root": "tsc --noEmit",
    "fix": "pnpm run \"/^fix:.*/\"",
    "fix:workspace": "pnpm run -r \"/^fix:.*/\"",
    "fix:lint:root": "eslint --fix",
    "dev": "pnpm run \"/^dev:.*/\"",
    "dev:apps": "pnpm --parallel --filter \"./apps/*\" dev",
    "dev:packages": "pnpm --parallel --filter \"./packages/*\" dev",
    "start": "pnpm run -r start",
    "test": "pnpm run \"/^test:.*/\"",
    "test:workspace": "pnpm run -r test",
    "release": "pnpm run build && changeset publish",
    "script": "pnpm run --filter @more/scripts script",
    "lockfile:install": "npm_config_offline=false pnpm install --lockfile-only --no-frozen-lockfile",
    "lockfile:add": "npm_config_offline=false pnpm add --lockfile-only"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.1",
    "@eslint/compat": "^1.2.8",
    "@eslint/js": "^9.23.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^20",
    "docker-compose": "^1.2.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.29.0",
    "vitest": "^3.1.1",
    "znv": "^0.5.0",
    "zod": "^3.24.2",
    "zx": "^8.5.2"
  },
  "packageManager": "pnpm@10.8.1",
  "engines": {
    "node": ">=20.0.0"
  }
}
