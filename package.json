{
  "name": "nopo",
  "version": "0.0.1",
  "private": true,
  "description": "mo(no) re(po) tools for mono repos",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:workspace": "pnpm run -r build",
    "clean": "run-p clean:*",
    "clean:workspace": "pnpm run -r clean",
    "clean:root": "rm -rf .cache .config .bash_history .env .local .pnpm-store node_modules && rm -f build-metadata.json || true",
    "check": "run-p check:*",
    "check:workspace": "pnpm run -r \"/^check:.*/\"",
    "check:lint:root": "eslint",
    "check:types:root": "tsc --noEmit",
    "fix": "run-p fix:*",
    "fix:workspace": "pnpm run -r \"/^fix:.*/\"",
    "fix:lint:root": "eslint --fix",
    "dev": "run-p dev:*",
    "dev:apps": "pnpm --parallel --filter \"./apps/*\" dev",
    "dev:packages": "pnpm --parallel --filter \"./packages/*\" dev",
    "start": "run-p start:*",
    "start:workspace": "pnpm run -r start",
    "test": "run-p test:*",
    "test:workspace": "pnpm run -r test",
    "publish:workspace": "pnpm publish -r",
    "smoketest": "playwright test",
    "install:lock": "yes | pnpm install --frozen-lockfile",
    "install:offline": "pnpm install:lock --offline",
    "scripts": "yes | npx zx --install ./packages/scripts/index.js"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.1",
    "@eslint/compat": "^1.2.8",
    "@eslint/js": "^9.23.0",
    "@playwright/test": "^1.52.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^20",
    "dotenv": "^16.4.7",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.29.0",
    "vitest": "^3.1.1",
    "znv": "^0.5.0",
    "zod": "^3.24.2",
    "zx": "^8.5.2"
  },
  "packageManager": "pnpm@10.11.1",
  "engines": {
    "node": "22.16.0"
  }
}
