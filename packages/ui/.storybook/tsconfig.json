{
  "extends": "../tsconfig.json",
  "include": [
    "../src/**/*",
    "../stories/**/*",
    "./**/*"
  ],
  "exclude": [
    "../node_modules",
    "../build"
  ],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "@storybook/react",
      "@storybook/test",
      "jest-image-snapshot"
    ]
  }
}
