{
  "extends": "@more/configs/tsconfig.dom.json",
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*",
    "types/**/*"
  ],
  "exclude": ["vite.config.ts.*", "node_modules"],
  "compilerOptions": {
    "noEmit": true,
    "types": ["node"],
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "rootDirs": [".", "./.react-router/types"],
    "paths": {
      "~/*": ["./app/*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"]
  }
}
